{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'create.title.create_address'|trans({}, 'SandboxAddressingBundleAddress') }}<small> {{ 'create.title.create_address_description'|trans({}, 'SandboxAddressingBundleAddress') }}</small></h1>
</div>

<form action="{{ path('sylius_addressing_backend_address_create') }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.firstname, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.lastname, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.street, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.city, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.postcode, {'attr': {'class': 'span2'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'create.button.create_address'|trans({}, 'SandboxAddressingBundleAddress') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
