{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'create.title.create_option'|trans({}, 'SandboxAssortmentBundleOption') }}<small> {{ 'create.title.create_option_description'|trans({}, 'SandboxAssortmentBundleOption') }}</small></h1>
</div>

<form action="{{ path('sylius_assortment_backend_option_create') }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.presentation, {'attr': {'class': 'span6'}}) }}
    <hr />
    <div id="sylius-assortment-option-values" data-prototype="{{ form_widget(form.values.get('prototype'))|e }}">
    </div>
    <a id="sylius-assortment-option-values-adder" class="btn btn-success btn-large pull-right">{{ 'create.button.add_value'|trans({}, 'SandboxAssortmentBundleOption') }}</a>
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'create.button.create_option'|trans({}, 'SandboxAssortmentBundleOption') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
