{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'list.title.list_statuses'|trans({}, 'SandboxSalesBundleStatus') }}</h1>
</div>

<div class="well">
<a href="{{ path('sylius_sales_backend_status_create') }}" class="btn btn-primary">
    <i class="icon-plus icon-white"></i> {{ 'list.button.create_new_status'|trans({}, 'SandboxSalesBundleStatus') }}
</a>
</div>

{% if statuses|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ 'list.table.status_id'|trans({}, 'SandboxSalesBundleStatus') }}</th>
            <th>{{ 'list.table.status_name'|trans({}, 'SandboxSalesBundleStatus') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for status in statuses %}
        <tr>
            <td>{{ status.id }}</td>
            <td>{{ status.name }}</td>
            <td>
                <div class="btn-toolbar pull-right">
                    <div class="btn-group">
                        {% if loop.first %}
                        <a class="btn disabled">&uarr;</a>
                        {% else %}
                        <a href="{{ path('sylius_sales_backend_status_move_up', {'id': status.id}) }}" class="btn">&uarr;</a>
                        {% endif %}

                        {% if loop.last %}
                        <a class="btn disabled">&darr;</a>
                        {% else %}
                        <a href="{{ path('sylius_sales_backend_status_move_down', {'id': status.id}) }}" class="btn">&darr;</a>
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        <a href="{{ path('sylius_sales_backend_status_update', {'id': status.id}) }}" class="btn">
                             <i class="icon-pencil"></i> {{ 'list.button.update'|trans({}, 'SandboxSalesBundleStatus') }}
                        </a>
                        <a href="{{ path('sylius_sales_backend_status_delete', {'id': status.id}) }}" class="btn btn-danger">
                             <i class="icon-remove icon-white"></i> {{ 'list.button.delete'|trans({}, 'SandboxSalesBundleStatus') }}
                        </a>
                    </div>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'list.information.title'|trans({}, 'SandboxSalesBundleStatus') }}</h4>
    {{ 'list.information.no_statuses'|trans({}, 'SandboxSalesBundleStatus') }}
</div>
{% endif %}
{% endblock %}
