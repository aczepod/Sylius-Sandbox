{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ 'update.title.update_option'|trans({}, 'SandboxAssortmentBundleOption') }}<small> {{ 'update.title.update_option_description'|trans({}, 'SandboxAssortmentBundleOption') }}</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_assortment_backend_option_update', {'id': option.id}) }}" method="post" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.presentation, {'attr': {'class': 'span6'}}) }}
    <hr />
    <div id="sylius-assortment-option-values" data-prototype="{{ form_widget(form.values.get('prototype'))|e }}">
        {% for valueForm in form.values %}
            {{ form_widget(valueForm)  }}
        {% endfor %}
    </div>
    <a id="sylius-assortment-option-values-adder" class="btn btn-success btn-large pull-right">{{ 'update.button.add_value'|trans({}, 'SandboxAssortmentBundleOption') }}</a>
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'update.button.save_changes'|trans({}, 'SandboxAssortmentBundleOption') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
