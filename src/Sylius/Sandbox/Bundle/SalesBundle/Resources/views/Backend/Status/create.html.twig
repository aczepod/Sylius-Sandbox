{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'create.title.create_status'|trans({}, 'SandboxSalesBundleStatus') }}<small> {{ 'create.title.create_status_description'|trans({}, 'SandboxSalesBundleStatus') }}</small></h1>
</div>

<form action="{{ path('sylius_sales_backend_status_create') }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span6'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'create.button.create_status'|trans({}, 'SandboxSalesBundleStatus') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
