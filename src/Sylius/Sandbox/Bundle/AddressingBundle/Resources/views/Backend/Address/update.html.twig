{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>{{ 'update.title.update_address'|trans({}, 'SandboxAddressingBundleAddress') }}<small> {{ 'update.title.update_address_description'|trans({}, 'SandboxAddressingBundleAddress') }}</small></h1>
</div>

<form action="{{ path('sylius_addressing_backend_address_update', {'id': address.id}) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.firstname, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.lastname, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.street, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.city, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.postcode, {'attr': {'class': 'span2'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'update.button.save_changes'|trans({}, 'SandboxAddressingBundleAddress') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
