{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'category.show.title.show_category'|trans({}, 'SandboxAssortmentBundle') }}<small> {{ 'category.show.title.show_category_description'|trans({}, 'SandboxAssortmentBundle') }}</small></h1>
</div>

<div class="well">
<a href="{{ path('sylius_assortment_backend_product_create') }}" class="btn btn-primary">
    <i class="icon-plus icon-white"></i> {{ 'category.show.button.create_product'|trans({}, 'SandboxAssortmentBundle') }}
</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% if products|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th><a href="{{ path('sylius_categorizer_backend_category_show', {'alias': catalog.alias, 'id': category.id}) }}">{{ 'category.show.table.product_id'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
            <th><a href="{{ path('sylius_categorizer_backend_category_show', {'alias': catalog.alias, 'id': category.id}) }}">{{ 'category.show.table.product_name'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
            <th><a href="{{ path('sylius_categorizer_backend_category_show', {'alias': catalog.alias, 'id': category.id}) }}">{{ 'category.show.table.product_price'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
            <th><a href="{{ path('sylius_categorizer_backend_category_show', {'alias': catalog.alias, 'id': category.id}) }}">{{ 'category.show.table.product_created_at'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.price }} &euro;</td>
            <td>{{ product.createdAt|date('Y-m-d H:i:s') }}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_assortment_backend_product_show', {'id': product.id}) }}" class="btn">
                       <i class="icon-book"></i> {{ 'category.show.button.product_show'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
                    </a>
                    <a href="{{ path('sylius_assortment_backend_product_update', {'id': product.id}) }}" class="btn">
                       <i class="icon-pencil"></i> {{ 'category.show.button.product_update'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
                    </a>
                    <a href="{{ path('sylius_assortment_backend_product_delete', {'id': product.id}) }}" class="btn btn-danger confirmer"
                        data-confirmer-question="{{ 'category.show.dialog.product_confirm_delete'|trans({}, 'SandboxAssortmentBundle') }}</a></th>"
                    >
                        <i class="icon-remove icon-white"></i> {{ 'category.show.button.product_delete'|trans({}, 'SandboxAssortmentBundle') }}</a></th>
                    </a>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'alert.heading.info'|trans({}, 'SandboxCoreBundle') }}.</h4>
    There are no products to display.
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% endblock %}
