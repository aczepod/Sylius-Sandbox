{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'list.title.list_orders'|trans({}, 'SandboxSalesBundleOrder') }}</h1>
</div>

<div class="well">
<a href="{{ path('sylius_sales_backend_status_list') }}" class="btn btn-primary">
    <i class="icon-th-large icon-white"></i> {{ 'list.button.manage_order_statuses'|trans({}, 'SandboxSalesBundleOrder') }}
</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

<ul class="nav nav-tabs">
    <li><a href="{{ path('sylius_sales_backend_order_list') }}">{{ 'list.filter.all_orders'|trans({}, 'SandboxSalesBundleOrder') }}</a></li>
    <li><a href="{{ path('sylius_sales_backend_order_list', {'filters': {'closed': [false, '=']}}) }}">{{ 'list.filter.open_orders'|trans({}, 'SandboxSalesBundleOrder') }}</a></li>
    <li><a href="{{ path('sylius_sales_backend_order_list', {'filters': {'closed': [true, '=']}}) }}">{{ 'list.filter.closed_orders'|trans({}, 'SandboxSalesBundleOrder') }}</a></li>
    <li><a href="{{ path('sylius_sales_backend_order_list', {'filters': {'status': [0, '='], 'closed': [false, '=']}}) }}"><span class="label label-important">&nbsp;!&nbsp;</span> {{ 'list.filter.attention_orders'|trans({}, 'SandboxSalesBundleOrder') }}</a></li>
    <li><a href="{{ path('sylius_sales_backend_order_list', {'filters': {'value': [500, '>']}}) }}">{{ 'list.filter.over_orders'|trans({}, 'SandboxSalesBundleOrder') }} <strong>500</strong> &euro;</a></li>
    <li><a href="{{ path('sylius_sales_backend_order_list', {'filters': {'value': [500, '<']}}) }}">{{ 'list.filter.below_orders'|trans({}, 'SandboxSalesBundleOrder') }} <strong>500</strong> &euro;</a></li>
</ul>

{% if orders|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'id', 'order': sorter.order, 'filters': filter.current}) }}">{{ 'list.table.order_id'|trans({}, 'SandboxSalesBundleOrder') }}</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'value', 'order': sorter.order, 'filters': filter.current}) }}">{{ 'list.table.order_value'|trans({}, 'SandboxSalesBundleOrder') }}</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'createdAt', 'order': sorter.order, 'filters': filter.current}) }}">{{ 'list.table.order_created_at'|trans({}, 'SandboxSalesBundleOrder') }}</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'status', 'order': sorter.order, 'filters': filter.current}) }}">{{ 'list.table.order_status'|trans({}, 'SandboxSalesBundleOrder') }}</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
        <tr{% if order.closed %} class="inactive"{% endif %}>
            <td>{{ order.id }}</td>
            <td>{{ order.value }} &euro;</td>
            <td>{{ order.createdAt|date('d.m.Y, H:i:s') }}</td>
            <td>
                {% render 'sylius_sales.controller.backend.order:changeStatusAction' with {'id': order.id} %}
            </td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_sales_backend_order_show', {'id': order.id}) }}" class="btn">
                        <i class="icon-book"></i> {{ 'list.button.details'|trans({}, 'SandboxSalesBundleOrder') }}
                    </a>
                    {% if order.closed %}
                    <a href="{{ path('sylius_sales_backend_order_open', {'id': order.id}) }}" class="btn">{{ 'list.button.open'|trans({}, 'SandboxSalesBundleOrder') }}</a>
                    {% else %}
                    <a href="{{ path('sylius_sales_backend_order_close', {'id': order.id}) }}" class="btn">{{ 'list.button.close'|trans({}, 'SandboxSalesBundleOrder') }}</a>
                    <a href="{{ path('sylius_sales_backend_order_delete', {'id': order.id}) }}" class="btn btn-danger">
                         <i class="icon-remove icon-white"></i> {{ 'list.button.delete'|trans({}, 'SandboxSalesBundleOrder') }}
                    </a>
                    {% endif %}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'list.information.title'|trans({}, 'SandboxSalesBundleOrder') }}</h4>
    {{ 'list.information.no_orders'|trans({}, 'SandboxSalesBundleOrder') }}
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% endblock %}
