{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ 'create.title.create_post'|trans({}, 'SandboxBloggerBundlePost') }}<small> {{ 'create.title.create_post_description'|trans({}, 'SandboxBloggerBundlePost') }}</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_blogger_backend_post_create') }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.title, {'attr': {'class': 'span7'}}) }}
    {{ form_row(form.author, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.content, {'attr': {'class': 'span9', 'rows': 10}}) }}
    {{ form_row(form.published) }}
    {{ form_row(form.categories, {'attr': {'class': 'span3'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
    <input type="submit" class="btn btn-large btn-primary" value="{{ 'create.button.create_post'|trans({}, 'SandboxBloggerBundlePost') }}">
    </div>
</form>
{% endblock %}
