{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'update.title.update_product'|trans({}, 'SandboxAssortmentBundleProduct') }}<small> {{ 'update.title.update_product_description'|trans({}, 'SandboxAssortmentBundleProduct') }}</small></h1>
</div>

<form action="{{ path('sylius_assortment_backend_product_update', {'id': product.id}) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.masterVariant.sku) }}
    {{ form_row(form.name, {'attr': {'class': 'span7'}}) }}
    {{ form_row(form.description, {'attr': {'class': 'span5', 'rows': 10}}) }}
    {{ form_row(form.category, {'empty_value': 'update.select.choose_category'|trans({}, 'SandboxAssortmentBundleProduct')}) }}
    {{ form_row(form.masterVariant.price) }}
    <hr />
    {{ form_row(form.options) }}
    <hr />
    <div id="sylius-assortment-product-properties" data-prototype="{{ form_widget(form.properties.get('prototype'))|e }}">
    {% for propertyForm in form.properties %}
        {{ form_widget(propertyForm) }}
    {% endfor %}
    </div>
    <a id="sylius-assortment-product-property-adder" class="btn btn-success btn-large pull-right">{{ 'update.button.add_property'|trans({}, 'SandboxAssortmentBundleProduct') }}</a>
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'update.button.save_changes'|trans({}, 'SandboxAssortmentBundleProduct') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
