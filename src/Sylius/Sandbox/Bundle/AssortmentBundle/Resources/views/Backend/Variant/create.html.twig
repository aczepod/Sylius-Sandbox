{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'create.title.create_variant'|trans({}, 'SandboxAssortmentBundleVariant') }}<small> {{ 'create.title.create_variant_description'|trans({}, 'SandboxAssortmentBundleVariant') }}</small></h1>
</div>

<form action="{{ path('sylius_assortment_backend_variant_create', {'productId': product.id}) }}" method="post" class="form-horizontal">
<fieldset>
    {% if form.options is defined and form.options|length > 0 %}
        {% for optionForm in form.options %}
            {{ form_row(optionForm) }}
        {% endfor %}
    {% endif %}
    {{ form_row(form.sku) }}
    {{ form_row(form.presentation) }}
    {{ form_row(form.price) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'create.button.create_variant'|trans({}, 'SandboxAssortmentBundleVariant') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
