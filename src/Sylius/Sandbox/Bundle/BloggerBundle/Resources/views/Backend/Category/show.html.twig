{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ 'show.title.show_category'|trans({}, 'SandboxBloggerBundleCategory') }}<small> {{ 'show.title.show_category_description'|trans({}, 'SandboxBloggerBundleCategory') }}</small></h1>
{% endblock %}

{% block content %}
<div class="well">
<a href="{{ path('sylius_blogger_backend_post_create') }}" class="btn btn-primary large">
    <i class="icon-plus icon-white"></i> {{ 'show.button.create_post'|trans({}, 'SandboxBloggerBundleCategory') }}
</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% if posts|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ 'show.table.post_id'|trans({}, 'SandboxBloggerBundleCategory') }}</th>
            <th>{{ 'show.table.post_title'|trans({}, 'SandboxBloggerBundleCategory') }}</th>
            <th>{{ 'show.table.post_author'|trans({}, 'SandboxBloggerBundleCategory') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.author }}</td>
                <td>
                    <div class="pull-right btn-group">
                        <a href="{{ path('sylius_blogger_backend_post_show', {'id': post.id}) }}" class="btn">
                            <i class="icon-book"></i> {{ 'show.button.read'|trans({}, 'SandboxBloggerBundleCategory') }}
                        </a>
                        <a href="{{ path('sylius_blogger_backend_post_update', {'id': post.id}) }}" class="btn">
                            <i class="icon-pencil"></i> {{ 'show.button.update'|trans({}, 'SandboxBloggerBundleCategory') }}
                        </a>
                        <a href="{{ path('sylius_blogger_backend_post_delete', {'id': post.id}) }}" class="btn btn-danger confirmer"
                            data-toggle="modal"
                            data-target="confirmer-modal"
                            data-confirmer-question="{{ 'show.dialog.post_confirm_delete'|trans({}, 'SandboxBloggerBundleCategory') }}"
                        >
                            <i class="icon-remove icon-white"></i> {{ 'show.button.delete'|trans({}, 'SandboxBloggerBundleCategory') }}
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'show.information.title'|trans({}, 'SandboxBloggerBundleCategory') }}</h4>
    {{ 'show.information.no_posts'|trans({}, 'SandboxBloggerBundleCategory') }}
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% endblock %}
