{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ 'update.title.update_property'|trans({}, 'SandboxAssortmentBundleProperty') }}<small> {{ 'update.title.update_property_description'|trans({}, 'SandboxAssortmentBundleProperty') }}</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_assortment_backend_property_update', {'id': property.id}) }}" method="post" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.presentation, {'attr': {'class': 'span6'}}) }}
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'update.button.save_changes'|trans({}, 'SandboxAssortmentBundleProperty') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
