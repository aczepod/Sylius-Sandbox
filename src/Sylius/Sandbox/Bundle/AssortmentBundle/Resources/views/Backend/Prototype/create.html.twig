{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ 'create.title.create_prototype'|trans({}, 'SandboxAssortmentBundlePrototype') }}<small> {{ 'create.title.create_prototype_description'|trans({}, 'SandboxAssortmentBundlePrototype') }}</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_assortment_backend_prototype_create') }}" method="post" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.options) }}
    {{ form_row(form.properties) }}
    <hr />
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'create.button.create_prototype'|trans({}, 'SandboxAssortmentBundlePrototype') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
