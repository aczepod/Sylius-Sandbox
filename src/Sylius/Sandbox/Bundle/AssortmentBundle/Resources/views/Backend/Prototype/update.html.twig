{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'update.title.update_prototype'|trans({}, 'SandboxAssortmentBundlePrototype') }}<small> {{ 'update.title.update_prototype_description'|trans({}, 'SandboxAssortmentBundlePrototype') }}</small></h1>
</div>

<form action="{{ path('sylius_assortment_backend_prototype_update', {'id': prototype.id}) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.options) }}
    {{ form_row(form.properties) }}
    <hr />
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="{{ 'update.button.save_changes'|trans({}, 'SandboxAssortmentBundlePrototype') }}" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
